{% if settings.body_bg_img != "none" %}
  html{ 
  {% case settings.body_bg_alignment %}
	{% when 'center' %}
	background: url({{ settings.body_bg_img | asset_url }}) 50% 0 no-repeat; 
	  
	{% when 'left' %}
	background: url({{ settings.body_bg_img | asset_url }}) 0 0 no-repeat; 

	{% when 'right' %}
	background: url({{ settings.body_bg_img | asset_url }}) 100% 0 no-repeat; 

	{% when 'tile' %}
	background: url({{ settings.body_bg_img | asset_url }}) 0 0; 
	
  {% endcase %}
  }
{% endif %}

html{ background-color: {{ settings.bg_colour }} }

/* Base
========================================================================*/ 

body {
	color: {{ settings.content_text_colour }};
}

/* Typography
========================================================================*/ 

h1, h1 a, h2, h2 a, h3, h3 a, h4, h4 a, h5, h5 a, h6, h6 a { 
	color: {{ settings.content_header_colour }}; 
	font: {{settings.header_font_style}} {{settings.header_font_size}}/1.0 {{settings.header_font}}; 
	font-weight: bold;	
}

h1{ 
	font-size: 80px; 
}

a { 
	color: {{ settings.content_link_colour }}; 
}

	a:hover { 
		color: {{ settings.content_link_hover_colour}} 
	}

input, textarea{
	border: solid 1px {{ settings.content_secondary_colour }}; 
	padding: 4px;
	color: #333;  
}

input[type="image"] { 
	border: none; 
}

button {  
	width: auto; 
	overflow: visible; 
}

.ie7 img { 
	-ms-interpolation-mode: bicubic; 
}

/* Structure
========================================================================*/

.wrapper {
	width: 1000px;
	margin: 0 auto;
}

/* Header
========================================================================*/

header h1 a {}

/* Homepage
========================================================================*/

#slider {
	width: 1000px;
	height: 500px;
	position: relative;
}

#slider ul {
	width: 1000px;
	height: 500px;;
}

#slider ul li,
#slider ul li a {
	width: 1000px;
	height: 500px;
	
	position: absolute;
	top: 0;
	left: 0;	
}

#slider ul li img {
	position: absolute;
	top: 0;
	left: 0;
}

#slider ul li .title {
	height: 24px;
	width: auto;
	padding: 12px;
	position: absolute;
	bottom: 0;
	right: 0;
	background-color: rgba(0,0,0,0.5);
	color: #fff;
	font-size: 24px;
	line-height: 24px;
}

/*Flux*/

#slider .fluxslider {
	position: absolute;
	top: 0;
	left: 0;
}
